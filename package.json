{
  "name": "my-apps",
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "lint": "eslint apps/**/*.ts --ext .ts --fix",
    "format": "prettier --write \"apps/**/*.ts\"",
    "build:shared": "pnpm --filter @my-apps/shared build",
    "build": "pnpm build:shared && pnpm --filter gateway build && pnpm --filter data-pipeline build && pnpm --filter journal build",
    "dev:gateway": "pnpm build:shared && pnpm --filter gateway start:dev",
    "dev:data-pipeline": "pnpm build:shared && pnpm --filter data-pipeline start:dev",
    "dev:journal": "pnpm build:shared && pnpm --filter journal start:dev"
  }
}
